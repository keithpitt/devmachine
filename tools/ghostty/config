# live reload with ctrl+shift+,

theme = ayu
font-family = JetBrainsMono Nerd Font
font-size = 16
font-feature = -calt, -liga, -dlig

window-inherit-working-directory = true

window-padding-x = 10
window-padding-y = 10
window-padding-balance = true

background-opacity = 0.97
background-blur = true

# these are disabled on linux because you want ctrl-c to cancel processes not
# copy, but we know better and bring them back
# keybind = performable:ctrl+c=copy_to_clipboard
# keybind = ctrl+v=paste_from_clipboard

keybind = ctrl+l=clear_screen

# when you resize a ghostty window it shows a little tooltp thing in the center
# of the window of it's current size. it's kinda annoying in a tiling window
# manager like wayland because the window is automatically resized as part of
# an animation. i don't see much value in it anyway so i'm just gonna turn it
# off
resize-overlay = never

keybind = global:cmd+grave_accent=toggle_quick_terminal
quick-terminal-animation-duration = 0
quick-terminal-position = top

macos-non-native-fullscreen = true
macos-titlebar-style = transparent

